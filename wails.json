{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "recap",
  "outputfilename": "recap",
  "frontend:install": "npm install",
  "frontend:build": "npm run build --base=./",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "frontend:dir": "./frontend",
  "wailsjsdir": "./frontend/src/lib",
  "author": {
    "name": "efeenesc",
    "email": "hello@efeenescamci.com"
  },
  "info": {
    "productVersion": "0.0.1",
    "comments": "Get a Recap of your daily activity. Built using Go and Wails."
  },
  "postBuildHooks": {
    "windows/*": "cmd.exe /c echo. > ..\/..\/frontend\/build\/.gitkeep",
    "linux/*": "touch ../../frontend/build/.gitkeep"
  }
}
